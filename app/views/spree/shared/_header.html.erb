<header class="header-v2">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">


  <title>TBDMarket - Products</title>
		<!-- Header desktop -->
		<div class="container-menu-desktop trans-03">
			<div class="wrap-menu-desktop">
				<nav class="limiter-menu-desktop p-l-45">
					<!-- Logo desktop -->
					<a href="#" class="logo">
						 <figure id="logo" class="columns six" data-hook><%= logo img_options: { class: 'img-responsive', width: '138' } %></figure>
					</a>

					<!-- Menu desktop -->
					<div class="menu-desktop">
            <div class="search-container">
              <button type="submit"><i class="fa fa-search"></i></button>
              <input type="text" placeholder="Find on tbd">
            </div>
          </div>

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m h-full">
            <div class="register-link">
              <li id="link-to-register" data-hook>
                <%= link_to spree.cart_path do %>Sell on tbd<% end %>
              </li>
            </div>
						<div class="flex-c-m h-full p-lr-19">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
                <% if signed_in? -%>
                  <%= spree_current_user.username || spree_current_user.email -%> &nbsp;|&nbsp;
                    <%= button_to 'Sign Out', logout_path, :id => "sign-out-btn",
                    :class => "sign_out", :method => :get %>
                  <% else -%>
                    <%= button_to 'Sign In', new_spree_user_session_path, :id => "sign-in", :class => "sign-in", :method => :get %>
                <% end # signed_in? -%>
							</div>
						</div>

            <div class="flex-c-m h-full p-l-12 p-r-34 p-t-8 header-icon-bor">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-6 icon-header-noti js-show-cart" data-notify="2">
                <li id="link-to-cart" data-hook>
                  <%= link_to spree.cart_path do %>
                    <i class="zmdi zmdi-shopping-cart"></i>
                  <% end %>
                  </li>
							</div>
						</div>

					</div>
        </nav>

        <nav>

          <!-- Replace with a curated list of categories -->

          <ul class="header-category-menu">
            <li>
              <%= link_to('Home', root_path) %>
            </li>

            <li class="active-menu">
              <a href="product.html">Shop</a>
            </li>

            <li>
              <a href="about.html">About</a>
            </li>

            <li>
              <a href="contact.html">Contact</a>
            </li>
          </ul>
				</nav>

			</div>
		</div>

		<!-- Header Mobile -->
		<div class="wrap-header-mobile">
			<!-- Logo moblie -->
			<div class="logo-mobile">
        <a href="#" class="logo">
           <figure id="logo" class="columns six" data-hook><%= logo img_options: { class: 'img-responsive', width: '96' } %></figure>
        </a>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
				<div class="flex-c-m h-full p-r-10">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
            <i class="zmdi zmdi-search"></i>
					</div>
				</div>

				<div class="flex-c-m h-full p-lr-10 bor5">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="2">
						<i class="fas fa-shopping-cart"></i>
					</div>
				</div>
			</div>

			<!-- Button show menu -->
			<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner">
            <i class="fas fa-bars"></i>
          </span>
				</span>
			</div>
		</div>


		<!-- Menu Mobile -->
		<div class="menu-mobile">
			<ul class="main-menu-m">
				<li>
					<a href="index.html">Home</a>
				</li>

				<li>
					<a href="product.html">Shop</a>
				</li>

				<li>
					<a href="about.html">About</a>
				</li>

				<li>
					<a href="contact.html">Contact</a>
				</li>
			</ul>
		</div>

		<!-- Modal Search -->
		<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
			<div class="container-search-header">
				<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
					<img src="images/icons/icon-close2.png" alt="CLOSE">
				</button>

				<form class="wrap-search-header flex-w p-l-15">
					<button class="flex-c-m trans-04">
						<i class="zmdi zmdi-search"></i>
					</button>
					<input class="plh3" type="text" name="search" placeholder="Search...">
				</form>
			</div>
		</div>

</header>
