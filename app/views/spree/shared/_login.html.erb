<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <p>
      <%= f.label :login, I18n.t('spree.email') + ' or ' + I18n.t('spree.username') %><br />
      <%= f.text_field :login, class: 'title form-control', tabindex: 1, autofocus: true %>
    </p>
    <p>
      <%= f.label :password, I18n.t('spree.password') %><br />
      <%= f.password_field :password, class: 'title form-control', tabindex: 2 %>
    </p>
  </div>
  <p>
    <%= f.check_box :remember_me, tabindex: 3 %>
    <%= f.label :remember_me, I18n.t('spree.remember_me') %>
  </p>
  <p><%= f.submit I18n.t('spree.login'), class: 'btn btn-primary button primary', tabindex: 4 %></p>
<% end %>
